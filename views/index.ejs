<body>
  <div class="container">

    <h1>BREAD(Browse,Read,Edit,Add,Delete)</h1>
    <h2>Filters</h2>
    <form class="" action="" method="post">

      <div class="form-group row" class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="col-sm-2" class="form-check-label" for="exampleCheck1">ID</label>
        <div class="col-sm-10">
          <input type="ID" class="form-control" id="inputID" placeholder="ID">
        </div>
      </div>

      <div class="form-group row" class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="col-sm-2" class="form-check-label" for="exampleCheck1">String</label>
        <div class="col-sm-10">
          <input type="ID" class="form-control" id="inputID" placeholder="String">
        </div>
      </div>

      <div class="form-group row" class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="col-sm-2" class="form-check-label" for="exampleCheck1">Integer</label>
        <div class="col-sm-10">
          <input type="ID" class="form-control" id="inputID" placeholder="Integer">
        </div>
      </div>

      <div class="form-group row" class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="col-sm-2" class="form-check-label" for="exampleCheck1">Float</label>
        <div class="col-sm-10">
          <input type="ID" class="form-control" id="inputID" placeholder="Float">
        </div>
      </div>

      <div class="form-group row" class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="col-sm-2" class="form-check-label" for="exampleCheck1">Date</label>
        <div class="col-sm-4">
          <input type="ID" class="form-control" id="inputID" placeholder="start date">
        </div>
      </div>
      <label class="col-sm-2"></label>
      <label>to</label>
      <br>
      <div class="form-group row">
        <label class="col-sm-2"></label>
        <div class="col-sm-4">
          <input type="ID" class="form-control" id="inputID" placeholder="start date">
        </div>
      </div>





      <div class="form-group row" class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="col-sm-2" class="form-check-label" for="exampleCheck1">Boolean</label>
        <div class="col-sm-10">
          <select class="form-control form-control" name="complete">
            <option value="false">false</option>
            <option value="true">true</option>
          </select>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </div>
    </form>



    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col-sm-10" class="ID">ID</th>
          <th scope="col-sm-10" class="String">String</th>
          <th scope="col-sm-10" class="Integer">Integer</th>
          <th scope="col-sm-10" class="Float">Float</th>
          <th scope="col-sm-10" clas="Date">Date</th>
          <th scope="col-sm-10" class="Boolean">Boolean</th>
          <th scope="col-sm-10" class="Actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((item, index)=>{ %>
        <tr>
          <th scope="row" class="ID">
            <%= index + 1 %>
          </th>
          <td class="String">
            <%= item.string %>
          </td>
          <td class="Integer">
            <%= item.integer %>
          </td>
          <td class="Float">
            <%= item.float %>
          </td>
          <td class="Date">
            <%= item.date %>
          </td>
          <td class="Boolean">
            <%= item.boolean %>
          </td>
          <td class="Actions"><a href="edit/<%= index %>" button type="submit" class="btn btn-primary">Edit</button>
              <a href="delete/<%= index %>" class="btn btn-danger" style="margin:5px;">Delete</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="add" button type="submit" class="btn btn-primary">ADD</a>
  </div>
</body>

</html>